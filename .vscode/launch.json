{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug crossfit-timetable",
			"cargo": {
				"args": ["run", "--bin", "crossfit-timetable"],
				"filter": { "name": "crossfit-timetable", "kind": "bin" }
			},
			"args": [],
			"cwd": "${workspaceFolder}",
			"env": {
				"RUST_LOG": "info",
				"RUST_BACKTRACE": "1"
			},
			"sourceLanguages": ["rust"]
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests",
			"cargo": {
				"args": ["test", "--no-run", "--message-format=json"],
				"filter": { "kind": "test" }
			},
			"args": [],
			"cwd": "${workspaceFolder}",
			"env": {
				"RUST_BACKTRACE": "1"
			},
			"sourceLanguages": ["rust"]
		}
	]
}
