{
  "name": "CrossFit 2.0 Rzesz√≥w Timetable",
  "image": "almalinux:9",

  "features": {
    // Git
    "ghcr.io/devcontainers/features/git:1": {},
    
    // Base Setup
    "ghcr.io/devcontainers-extra/features/bash-command:1": {
      "command": "dnf install -y curl --allowerasing && dnf install -y gcc gcc-c++ make pkgconf-pkg-config openssl-devel dnf-plugins-core && dnf clean all"
    },

    // Non root user setup and update common packages
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "installOhMyZsh": false,
      "installOhMyZshConfig": false,
      "upgradePackages": true
    },

    // Rust toolchain with rustfmt and clippy
    "ghcr.io/devcontainers/features/rust:1": {
      "profile": "minimal",
      "components": "rust-analyzer,rust-src,rustfmt,clippy"
    },

    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "pflannery.vscode-versionlens",
        "tamasfe.even-better-toml",
        "GitHub.copilot",
        "redhat.vscode-yaml",
        "vadimcn.vscode-lldb",
        "DavidAnson.vscode-markdownlint",
        "GitHub.vscode-github-actions"
      ],
      "settings": {
        "rust-analyzer.check.command": "clippy",
        "rust-analyzer.cargo.targetDir": "${workspaceFolder}/target",
        "[rust]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "rust-lang.rust-analyzer"
        }
      }
    }
  },

  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Axum Server",
      "onAutoForward": "notify"
    }
  },

  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],

  "postCreateCommand": "make setup",

  "remoteUser": "vscode"
}